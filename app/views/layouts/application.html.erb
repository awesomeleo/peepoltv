<!DOCTYPE html>
<html>
<head>
  <title>Peepltv</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="header">
	<h1><a href="/">Peepl.tv</a></h1>

	<div class="right">
		<form action="/videos/search">
			<input type="text" name="q" />
			<input type="submit" value="Search" />
		</form>
	
		<a href="/videos/new">New video [+]</a>
	</div>
</div>

<%= yield %>

</body>
</html>
